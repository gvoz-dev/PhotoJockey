<?xml version="1.0" encoding="UTF-8"?>
<menuBar id="MainMenu">
    <menu id="FileMenu" text="File" mnemonic="F">
        <item id="NewFile"
              action="org.gvozdev.pj.actions.file.NewFileAction"
              text="New"
              icon="icons/menu/newFile/addFile_dark.svg"
              description="Create a new file"
              accelerator="ctrl N"
              mnemonic="N"
        />
        <item id="OpenFile"
              action="org.gvozdev.pj.actions.file.OpenFileAction"
              text="Open..."
              icon="icons/menu/openFile/menu-open_dark.svg"
              description="Open a file"
              mnemonic="O"
        />
        <item id="SaveFile"
              action="org.gvozdev.pj.actions.file.SaveFileAction"
              text="Save..."
              icon="icons/menu/saveFile/menu-saveall_dark.svg"
              description="Save current file"
              accelerator="ctrl S"
              mnemonic="S"
        />
        <item id="CloseFile"
              action="org.gvozdev.pj.actions.file.CloseFileAction"
              text="Close"
              description="Close current file"
              accelerator="ctrl W"
        />
        <separator/>
        <item id="PrintFile"
              action="org.gvozdev.pj.actions.file.PrintFileAction"
              text="Print..."
              icon="icons/menu/printFile/print_dark.svg"
              description="Print file"
              mnemonic="P"
        />
        <separator/>
        <item id="Exit"
              action="org.gvozdev.pj.actions.ExitAction"
              text="Exit"
              icon="icons/menu/exit/exit_dark.svg"
              description="Quit"
              accelerator="ctrl Q"
              mnemonic="X"
        />
    </menu>
    <menu id="EditMenu" text="Edit" mnemonic="E">
        <item id="Undo"
              text="Undo"
              icon="icons/menu/undo/undo_dark.svg"
              description="Undo"
              accelerator="ctrl Z"
              mnemonic="U"
              enabled="false"
        />
        <item id="Redo"
              text="Redo"
              icon="icons/menu/redo/redo_dark.svg"
              description="Redo"
              accelerator="ctrl shift Z"
              mnemonic="R"
              enabled="false"
        />
        <separator/>
        <item id="Settings"
              text="Settings..."
              icon="icons/menu/settings/settings_dark.svg"
              description="Edit application settings"
              accelerator="ctrl alt S"
              mnemonic="S"
              enabled="false"
        />
    </menu>
    <menu id="FiltersMenu" text="Filters" mnemonic="S">
        <menu id="StandardFilters" text="Standard" mnemonic="S">
            <item id="PJGrayscale"
                  action="org.gvozdev.pj.actions.filters.ColorFilterAction"
                  text="Grayscale"
                  description="Grayscale"
            />
            <item id="PJNegative"
                  action="org.gvozdev.pj.actions.filters.ColorFilterAction"
                  text="Negative"
                  description="Negative"
            />
            <item id="PJSepia"
                  action="org.gvozdev.pj.actions.filters.ColorFilterAction"
                  text="Sepia"
                  description="Sepia"
            />
        </menu>
    </menu>
    <menu id="HelpMenu" text="Help" mnemonic="H">
        <item id="About"
              action="org.gvozdev.pj.actions.AboutAction"
              text="About"
              icon="icons/menu/help/help_dark.svg"
              description="Show info about PhotoJockey"
              mnemonic="A"
        />
    </menu>
</menuBar>
